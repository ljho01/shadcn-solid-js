{
  "name": "shadcn-solid-js",
  "private": true,
  "workspaces": [
    "packages/core/*",
    "packages/solid/*",
    "packages/shadcn/*",
    "apps/*",
    "internal/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:registry": "bun run scripts/build-registry.ts",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:unit": "vitest",
    "test:e2e": "playwright-cli install-browser && playwright-cli open",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "25.2.2",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "turbo": "^2.3.3",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-solid": "2.11.10",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@tailwindcss/vite": "4.1.18",
    "@tanstack/solid-router": "1.159.5",
    "@tanstack/solid-start": "1.159.5",
    "aria-hidden": "1.2.6",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "solid-js": "1.9.11",
    "solid-prevent-scroll": "0.1.10",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "4.1.18",
    "vite-tsconfig-paths": "6.1.0"
  },
  "packageManager": "bun@1.1.0"
}
